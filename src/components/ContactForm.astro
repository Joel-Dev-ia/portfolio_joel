<section class="w-full max-w-7xl mx-auto px-4 md:px-8 py-8">
  <div class="max-w-6x2 w-full grid md:grid-cols-2 gap-1 items-center">

    <!-- Illustration -->
    <div class="hidden md:flex justify-center">
      <img src="/img/image8.png" alt="Illustration Contact" class="w-full max-w-md">
    </div>

    <!-- Formulaire -->
    <div class="bg-white/5 backdrop-blur-md p-8 rounded-xl shadow-xl border border-white/10">
      <h2 class="text-3xl font-bold text-white mb-6">Contactez-moi</h2>

      <!-- ✅ Formulaire avec ID -->
      <form id="contact-form">
        <div>
          <label for="name" class="block text-sm text-white mb-1">Nom</label>
          <input type="text" id="name" name="name" required
            class="w-full px-4 py-3 rounded-lg bg-white/10 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-violet-500" placeholder="Votre nom">
        </div>
        <div>
          <label for="email" class="block text-sm text-white mb-1">Email</label>
          <input type="email" id="email" name="email" required
            class="w-full px-4 py-3 rounded-lg bg-white/10 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-violet-500" placeholder="Votre adresse e-mail">
        </div>
        <div>
          <label for="message" class="block text-sm text-white mb-1">Message</label>
          <textarea id="message" name="message" rows="5" required
            class="w-full px-4 py-3 rounded-lg bg-white/10 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-violet-500" placeholder="Votre message"></textarea>
        </div>
        <button type="submit"
          class="bg-gradient-to-r from-purple-600 to-cyan-500 text-white py-3 px-6 rounded-lg hover:opacity-90 transition">
          Envoyer le message
        </button>

        <!-- ✅ Message après envoi -->
        <p id="form-message" class="mt-4 text-sm"></p>
      </form>
    </div>
  </div>
</section>

<!-- ✅ Script JS à mettre juste avant </body> -->
<script>
  const form = document.getElementById("contact-form");
  const message = document.getElementById("form-message");

  form.addEventListener("submit", async function (e) {
    e.preventDefault();

    const formData = new FormData(form);

    try {
      const response = await fetch("https://formspree.io/f/manblojq", {
        method: "POST",
        headers: {
          'Accept': 'application/json'
        },
        body: formData
      });

      if (response.ok) {
        message.textContent = "✅ Message envoyé avec succès !";
        message.classList.remove("text-red-400");
        message.classList.add("text-green-400");
        form.reset();
      } else {
        message.textContent = "❌ Une erreur est survenue. Merci de réessayer.";
        message.classList.remove("text-green-400");
        message.classList.add("text-red-400");
      }
    } catch (error) {
      message.textContent = "❌ Problème de connexion. Réessayez plus tard.";
      message.classList.remove("text-green-400");
      message.classList.add("text-red-400");
    }
  });
</script>
